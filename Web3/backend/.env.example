# Example Environment Variables Configuration
# Copy this file to .env and update the values with your own

# Secret key for your application
SECRET="your_secret_key_here"

# Salt rounds for hashing passwords
SALT_ROUNDS=10

# MongoDB connection URI
MONGO_URI="mongodb+srv://username:password@your-cluster-url.mongodb.net/your-database-name?retryWrites=true&w=majority"

# Arkhia network configuration for Hedera Testnet
CHAIN_ID=296
ARKHIA_RPC_URL="https://pool.arkhia.io/hedera/testnet/json-rpc/v1/your_rpc_url_here"
ARKHIA_API_KEY="your_arkhia_api_key_here"

# Hedera Testnet operator details
OPERATOR_ID="0.0.your_operator_id_here"
TESTNET_OPERATOR_PRIVATE_KEY="your_ecdsa_hex_encoded_private_key_here"

# Other testnet configuration
TESTNET_ENDPOINT="https://your_testnet_endpoint_url_here"
API_URL="https://your_api_url_here"
API_KEY="your_api_key_here"
